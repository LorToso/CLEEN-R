<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainActivityLayout">

    <cleenr.com.nxtcontrol.VerticalMotorSpeedSlider
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/seekBar_leftMotor"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:progress="50"
        android:max="100"
        android:indeterminate="false" />

    <cleenr.com.nxtcontrol.VerticalMotorSpeedSlider
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/seekBar_rightMotor"
        android:layout_alignParentEnd="false"
        android:indeterminate="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:max="100"
        android:progress="50" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0%"
        android:id="@+id/textView_motorLeftValue"
        android:layout_alignTop="@+id/seekBar_leftMotor"
        android:layout_toEndOf="@+id/seekBar_leftMotor"
        android:singleLine="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0%"
        android:id="@+id/textView_motorRightValue"
        android:layout_alignTop="@+id/seekBar_rightMotor"
        android:layout_toStartOf="@+id/seekBar_rightMotor"
        android:singleLine="true"
        android:textAlignment="center" />

    <cleenr.com.nxtcontrol.MotorSpeedSlider
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_gripperMotor"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:progress="50"
        android:max="100" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0%"
        android:id="@+id/textView_gripperMotorValue"
        android:singleLine="true"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/seekBar_gripperMotor"
        android:layout_toEndOf="@+id/seekBar_gripperMotor" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" not connected"
        android:id="@+id/textView_connected"
        android:layout_below="@+id/seekBar_gripperMotor"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="connect"
        android:id="@+id/button_connect"
        android:layout_alignBottom="@+id/textView_connected"
        android:layout_alignStart="@+id/textView_motorRightValue"
        android:enabled="true" />
</RelativeLayout>
